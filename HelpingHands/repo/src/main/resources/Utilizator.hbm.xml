<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.helpinghands.domain.Utilizator" table="Users" discriminator-value="0">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <discriminator column="userType" type="int"/>

        <property name="username" column="username"/>
        <property name="password" column="password"/>
        <property name="email" column="email"/>
        <property name="nume" column="nume"/>
        <property name="prenume" column="prenume"/>

        <subclass name="com.helpinghands.domain.Admin" discriminator-value="1">
        </subclass>

        <subclass name="com.helpinghands.domain.Voluntar" discriminator-value="2">
            <property name="xpPoints" column="xpPoints"/>
            <set name="interests" table="VoluntarInterests"
                 cascade="save-update, merge, persist" lazy="false">
                <key column="idVoluntar"/>
                <many-to-many column="idInterest"
                              class="com.helpinghands.domain.Interest"/>
            </set>

            <property name="sponsor" column="isSponsor"/>
            <property name="activeSponsor" column="isActive"/>

            <set name="sponsoredEvents" table="SponsorDataSponsoredEvents"
                 cascade="save-update, merge, persist" lazy="false">
                <key column="idVoluntar"/>
                <many-to-many column="idEvent"
                              class="com.helpinghands.domain.Eveniment"/>
            </set>

            <set name="sponsorTypes" table="SponsorDataSponsorTypes"
                 cascade="save-update, merge, persist" lazy="false">
                <key column="idVoluntar"/>
                <many-to-many column="idSponsorType"
                              class="com.helpinghands.domain.SponsorType"/>
            </set>

        </subclass>

        <!--SponsorData sponsorData = null;
        -->
    </class>
</hibernate-mapping>