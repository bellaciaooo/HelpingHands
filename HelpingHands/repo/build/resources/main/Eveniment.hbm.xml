<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.helpinghands.domain.Eveniment" table="Evenimente">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property name="name" column="name"/>
        <property name="description" column="description"/>
        <property name="startDate" column="startDate"/>
        <property name="endDate" column="endDate"/>
        <property name="location" column="location"/>
        <property name="status" column="status"/>

        <many-to-one name="initiator" class="com.helpinghands.domain.Voluntar" fetch="select">
            <column name="idVoluntar" not-null="true" />
        </many-to-one>

        <set name="interests" table="EventInterests"
             cascade="save-update, merge, persist">
            <key column="idEvent"/>
            <many-to-many column="idInterest"
                          class="com.helpinghands.domain.Interest"/>
        </set>

        <set name="participants" table="ParticipantsEvents"
             cascade="save-update, merge, persist">
            <key column="idEvent"/>
            <many-to-many column="idParticipant"
                          class="com.helpinghands.domain.Participant"/>
        </set>
    </class>
</hibernate-mapping>