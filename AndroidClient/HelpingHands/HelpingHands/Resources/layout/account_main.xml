<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

    <GridLayout
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="376.5dp"
        android:layout_gravity="center"
        android:rowCount="14"
        android:columnCount="2"
        android:id="@+id/ProfileView"
        android:layout_marginBottom="104.5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="First Name"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Prenume" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Last Name"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Nume" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Email"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/Email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Xp Points"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/XpPct" />

         <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"                
        android:text="Interests"/>        
        <Spinner android:layout_width="300dp" android:layout_height="wrap_content" 
            android:id="@+id/InterestBox" />



        <Button
            android:layout_width="wrap_content"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="Apply for sponsor account"
            android:id="@+id/ApplyForSponsorButton"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_marginRight="46.0dp"
            android:backgroundTint="#B30064"
            android:textColor="#ffffff"
            android:width="900px"
            />


    </GridLayout>
</LinearLayout>
